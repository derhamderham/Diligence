<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- App Bundle Information -->
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIconFile</key>
	<string></string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>1.0</string>
	<key>CFBundleVersion</key>
	<string>1</string>
	<key>LSMinimumSystemVersion</key>
	<string>$(MACOSX_DEPLOYMENT_TARGET)</string>
	<key>NSHumanReadableCopyright</key>
	<string></string>
	
	<!-- Privacy Usage Descriptions -->
	<key>NSCalendarsUsageDescription</key>
	<string>Diligence needs access to Calendars to sync your tasks and due dates with your calendar events for better organization and scheduling.</string>
	<key>NSRemindersUsageDescription</key>
	<string>Diligence needs access to Reminders to sync your tasks with the system Reminders app, allowing you to manage tasks across all your Apple devices.</string>
	
	<!-- App Transport Security (if you need network access for Gmail) -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
		<key>NSExceptionDomains</key>
		<dict>
			<key>googleapis.com</key>
			<dict>
				<key>NSExceptionRequiresForwardSecrecy</key>
				<false/>
				<key>NSExceptionMinimumTLSVersion</key>
				<string>TLSv1.2</string>
				<key>NSIncludesSubdomains</key>
				<true/>
			</dict>
			<key>gmail.com</key>
			<dict>
				<key>NSExceptionRequiresForwardSecrecy</key>
				<false/>
				<key>NSExceptionMinimumTLSVersion</key>
				<string>TLSv1.2</string>
				<key>NSIncludesSubdomains</key>
				<true/>
			</dict>
		</dict>
	</dict>
	
	<!-- Document Types (if needed for file handling) -->
	<key>CFBundleDocumentTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeExtensions</key>
			<array>
				<string>diligence</string>
			</array>
			<key>CFBundleTypeName</key>
			<string>Diligence Task File</string>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>LSTypeIsPackage</key>
			<false/>
		</dict>
	</array>
	
	<!-- URL Schemes (if you need custom URL handling) -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleURLName</key>
			<string>com.yourcompany.diligence.url</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>diligence</string>
			</array>
		</dict>
	</array>
	
	<!-- App Category -->
	<key>LSApplicationCategoryType</key>
	<string>public.app-category.productivity</string>
	
	<!-- High Resolution Capable -->
	<key>NSHighResolutionCapable</key>
	<true/>
	
	<!-- Principal Class (for SwiftUI apps) -->
	<key>NSPrincipalClass</key>
	<string>NSApplication</string>
</dict>
</plist>